@{
    ViewBag.Title = "Home Page";
}

<div ng-controller="homecontrollers">
    <div class="jumbotron">
        <h1 class="text-center">Wind monitoring system</h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h3>State</h3>
            <p>
                <select class="form-control" ng-options="state as state.StateName for state in states" ng-model="selectedState" ng-change="StateChange()">
                </select>
                    <br />
                    <h3>Station Code</h3>
                    <input class="form-control" type="text" ng-model="stationCode" readonly />
                    <br />
                    <h3>Predicted Speed (km/h)</h3>
                    <input class="form-control" type="text" ng-model="predictedSpeed" readonly />
                    <br />
                    <h3>Variance</h3>
                <input class="form-control {{colorName}}" type="text" ng-model="variance" />
                
</p>
        </div>
        <div class="col-md-6">
            <h3>City</h3>
            <select class="form-control" ng-options="city as city.CityName for city in cityList" ng-model="selectedCity" ng-change="CityChange()"></select>
            <br />
            <h3>Date </h3> 
            <input class="form-control" type="date"  id="currentDateTb" />
            <a ng-href="#">Historical Data</a>
            <br />
            <h3>Actual Speed (km/h)</h3>
            <input class="form-control" type="text" ng-model="actualSpeed" ng-change="checkVariance()" />
            <br /> <br /><br /> <br />
            <div class="btn-group">
                <button type="button" class="btn btn-primary">Save</button>
            </div>
            <div class="btn-group">
                <button type="button" class="btn btn-default">Cancel</button>
            </div>
           
        </div>
    </div>
</div>
